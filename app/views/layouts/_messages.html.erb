<%# Rails flash messages styled for Zurb Foundation %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div id="mainAlert1" data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %>" tabindex="0" aria-live="assertive" role="dialogalert">
      <%= content_tag :div, msg %>
      <a href="#" tabindex="0" class="close" aria-label="Close Alert">&times;</a>
    </div>
  <% end %>
<% end %>