  </div>
  <div class="field">
    <%= f.label :position_time %><br>
    <%= f.select :position_time, [['Full-time', 'Full-time'], ['Part-time', 'Part-time']] %>
  </div>
  <div class="field">
    <%= f.label :job_paid %><br>
    <%= f.select :job_paid, [['Paid', 'Paid'], ['Unpaid', 'Unpaid']] %>
