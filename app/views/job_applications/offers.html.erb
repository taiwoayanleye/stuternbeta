<div id="job_applications_container">
  <% @job_applications.each do |job_application| %>
  <div class="row">
    <div id='position_section'>
    
      <div class="small-12 medium-4 large-9 columns">    
        <div id="Job_position">
          <dl>
            <dd> Job_position </dd>
            <dt id="intern_duration_content"><%= job_application.job_posting.position %></dt>
          </dl>
        </div>
      </div>

      <div class="small-12 medium-4 large-3 columns">
        <div id="post_new_button">
          <% if (user_signed_in?) %>
            <a><%= link_to 'Post'.upcase, new_job_posting_path, class:"button radius", data: { no_turbolink: true } %></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

    <div class="small-12 medium-4 large-4 columns">
      <div id='profile_container'>
        <div id="image">
          <dl>
            <dd> image </dd>
            <dt id="intern_duration_content">
            <%= link_to image_tag(StudentProfile.find(job_application.student_profile_id).image_url(:thumb)), student_profile %>
            </dt>
          </dl>
        </div>

        <div id="student">
          <dl>
            <dd> Student </dd>
            <dt id="intern_duration_content"><%= StudentProfile.find(job_application.student_profile_id).first_name %></dt>
          </dl>
        </div>

        <% if !job_application.cover_letter.nil? && job_application.cover_letter.to_s != "" %>

        <div id="cover_letter">
          <dl>
            <dd> Cover_letter </dd>
            <dt id="intern_duration_content"><%= link_to 'View', "#{root_url[0...-1]}#{job_application.cover_letter}" %></dt>
          </dl>
        </div>
        <% end %>
      </div>

      <div id="Application_date">
        <dl>
          <dd> Application_date </dd>
          <dt id="intern_duration_content"><%= job_application.created_at.strftime("%B %-d, %Y")%></dt>
        </dl>
      </div>
    </div>
  <% end %>
  <div class="small-12 medium-4 large-3 columns">
    <div id="post_new_button">
      <% if (user_signed_in?) %>
        <a><%= link_to 'Post new position'.upcase, new_job_posting_path, class:"button radius", data: { no_turbolink: true } %></a>
      <% end %>
    </div>
  </div>
</div>
