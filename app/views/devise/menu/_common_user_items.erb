        <li>
          <%= link_to 'Experience', stu_work_experiences_path, :class => 'navbar-link' %>
        </li>
        <li>
          <%= link_to 'Skill', skills_path, :class => 'navbar-link' %>
        </li>
        <li>
          <%= link_to 'Interest', stu_interests_path, :class => 'navbar-link' %>
        </li>
        <li>
          <%= link_to 'Certification', stu_certifications_path, :class => 'navbar-link' %>
        </li>
        <li>
          <%= link_to 'References', stu_references_path, :class => 'navbar-link' %>
        </li>
      </ul>
    </li>
    <!-- Account -->
    <li class="has-dropdown">
      <a> <%= link_to 'Account' %> </a>
      <ul class="dropdown">
        <li>
          <%= link_to 'Application History', applicants_path %>
        </li>
        <li>
        <%= link_to 'Settings', edit_user_registration_path, :class => 'navbar-link' %>
