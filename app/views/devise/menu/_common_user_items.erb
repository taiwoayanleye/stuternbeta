      <a> <%= link_to 'Account' %> </a>
      <ul class="dropdown">
        <li>
          <%= link_to "Manage Listings", company_posting_path %>
        </li>
        <li>
          <%= link_to 'Postings History', offers_path %>
        </li>
        <li>
        <%= link_to 'Settings', edit_user_registration_path, :class => 'navbar-link' %>
        </li>
        <li>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        </li>
      </ul>
    </li>
  <% else %>
      <!-- #something to do here for admin -->
  <% end %>
