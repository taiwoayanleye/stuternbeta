<% if user_signed_in? %>
  <% current_user_id = current_user.id.to_s() %>
  <%  if current_user.user_type == "student" %>
    <!-- Discover -->
    <li>
      <%= link_to 'Internships', search_job_postings_path, :class => 'navbar-link' %>
    </li>
    <!-- Explore -->
    <li>
      <%= link_to 'Employers', company_profiles_path, :class => 'navbar-link' %>
    </li>
    <!-- student_profile -->
    <li class="has-dropdown">
      <a>
        <%= link_to 'Profile', student_profile_path(current_user_id) %>
      </a>
      <ul class="dropdown">
        <li>
          <%= link_to 'View Profile', student_profile_path(current_user_id), :class => 'navbar-link' %>
        </li>          
        <li>
          <%= link_to 'Edit Profile', edit_student_profile_path(current_user_id), :class => 'navbar-link' %>
